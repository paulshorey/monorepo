{
  "extends": "./tsconfig.base.json",
  "include": ["browser/**/*", "io/**/*", "requests/**/*", "server/**/*", "**/*.spec.ts", "**/*.test.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "umd",
    "esm",
    "out",
    "test",
    ".next",
    ".backup",
    "public",
    "storybook-static",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.stories.tsx"
  ],
  "compilerOptions": {
    "outDir": "esm",
    "module": "es6",
    "target": "es6",
    "baseUrl": ".",
    "paths": {},
    "lib": ["DOM"],
    "types": ["node", "jest"]
  }
}
