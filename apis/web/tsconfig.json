{
  "include": ["api/**/*", "lib/**/*"],
  "exclude": [
    "docs",
    "node_modules",
    "dist",
    "umd",
    "esm",
    "out",
    "test",
    ".next",
    ".backup",
    "public",
    "storybook-static",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.stories.tsx"
  ],
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "jest"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strictNullChecks": false,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@ps/nlp/*": ["./*"]
    },
    "rootDirs": ["api", "lib"],
    "outDir": "esm"
  }
}
